


<div class="tasksContainer">
  <h1>TaskList</h1>
    <table class="taskTable">

      <%= render partial: 'tasks', locals: {tasks: @tasks} %>
    
    </table>
  <button id="add_task" type="button">Add Task</button>
</div>






<div id="addTaskDialog">
    <h1>Add New Task</h1>
     <div class="closeTaskDialog">x</div>
     <%= form_for :task, url: '/', :html => {:class => 'inputForm'}, remote: true do |f| %>
       <p>Description</p>
       <%= f.text_area :description %>
       <p>Performer</p>
       <%= f.select(:performer_id) do %>
         <% @select_users.each do |c| -%>
         <%= content_tag(:option, c.first, value: c.last) %>
       <% end %>
       <% end %>
       <%= f.submit "Submit" %>

     <% end %>

</div>
